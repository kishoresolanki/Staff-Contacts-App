<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ContactItem"

    >

    <TextView
        android:id="@+id/ContactNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contact Name"
        android:textSize="22sp"
        android:padding="25dp"
        android:textColor="#000000"
        android:textStyle="bold"
        />

    <ImageButton
        android:id="@+id/CallButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ContactNameTV"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="21dp"
        app:srcCompat="@drawable/ic_call_black_24dp"
        android:backgroundTint="#ffffff"
        />

    <ImageButton
        android:id="@+id/MailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ContactNameTV"
        android:layout_alignParentTop="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="21dp"
        android:layout_toStartOf="@+id/CallButton"
        android:layout_toEndOf="@+id/ContactNameTV"
        android:backgroundTint="#ffffff"
        app:srcCompat="@drawable/ic_email_black_24dp" />

    <TextView
        android:id="@+id/DesignationTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ContactNameTV"
        android:layout_alignTop="@+id/ContactNameTV"
        android:layout_alignEnd="@+id/ContactNameTV"
        android:layout_alignBottom="@+id/ContactNameTV"
        android:layout_marginStart="32dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="7dp"
        android:text="Designation"
        android:textStyle="italic"
        android:textColor="#000000" />

</RelativeLayout>